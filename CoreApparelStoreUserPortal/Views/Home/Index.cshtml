@model IEnumerable<CoreApparelStoreUserPortal.Models.Products>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
<section class="jumbotron text-center">
    <div class="container">
        <h1 class="jumbotron-heading">Album example</h1>
        <p class="lead text-muted">Something short and leading about the collection below—its contents, the creator, etc. Make it short and sweet, but not too short so folks don’t simply skip over it entirely.</p>
        <p>
            <a href="#" class="btn btn-primary my-2">Main call to action</a>
            <a href="#" class="btn btn-secondary my-2">Secondary action</a>
        </p>
    </div>
</section>
<div class="album py-5 bg-light">
    <div class="container">

        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4">
                    <div class="card mb-4 shadow-sm">
                        <img src="@item.ProductImage" class="bd-placeholder-img card-img-top" height="400" width="200" />
                        @*<svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: Thumbnail"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c" /><text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text></svg>*@
                        <div class="card-body">
                            <p class="card-text" style="font-weight:bold">@item.ProductName</p>

                            <p class="card-text">@item.ProductDescription</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <form id="prospects_form">
                                    <div class="btn-group">
                                        <a asp-controller="Home" asp-action="Details" asp-route-id="@item.ProductId" class="btn btn-outline-secondary">View d</a>
                                        @*<button type="button" class="btn btn-sm btn-outline-secondary">Add to Cart</button>*@
                                        @*<a asp-controller="cart" asp-action="Buy" asp-route-id="@item.ProductId" class="btn btn-outline-secondary">Add To Cart</a>*@
                                        <button type="submit" onclick="alert('itm is added to cart')"  asp-controller="cart" asp-action="Buy" asp-route-id="@item.ProductId" class="btn btn-outline-secondary">Add To Cart</button>
                                    </div>
                                </form>
                                <small class="text-muted">@item.ProductQuantity Left</small>
                            </div>
                        </div>
                    </div>
                </div>
            

            }
        </div>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.3.1.js"
        integrity="sha256-2Kok7MbOyxpgUVvAk/HJ2jigOSYS2auK4Pfzbm7uH60="
        crossorigin="anonymous"></script>

